{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["es2016", "dom", "es2017", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noLib": false,
    "outDir": "dist",
    "paths": {
      "lib/*": ["src/lib/*"]
    },
    "removeComments": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es2017"
  },
  "exclude": ["node_modules", "build", "src/lib/util/customTypings"],
  "filesGlob": ["src/**/*.ts", "!node_modules/**/*.ts"]
}
